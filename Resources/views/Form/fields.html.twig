{% block icon_choice_widget %}
    <div class="select-icon-container">
        <span class="icon-preview {{ value }}"></span>
        <a onclick="Editor.selectIconWindow(this)" class="btn btn-default btn-sm select-icon-btn" href="javascript:;">Select icon</a>
        <div class="icon-selection-list d-none">
            <a class="selection-close" href="javascript:;" onclick="Editor.closeIconWindow(this)">
                &times;
            </a>
            <div class="icon-selection-list-inner">
                {% for group_label, choice in choices %}
                    <a class="icon-choice" href="javascript:;" onclick="Editor.selectIcon(this)" data-value="{{ choice.value }}" data-target="#{{ form.vars.id }}">
                        <span class="{{ choice.value }}"></span>
                        {{ choice.label }}
                    </a>
                {% endfor %}
            </div>
        </div>
    </div>
    <input type="hidden" name="{{ full_name }}" id="{{ form.vars.id }}" value="{{ value }}" />
{% endblock %}

{% block image_preview_widget %}
    {% if src is not empty %}
        <img style="width:120px" src="{{ src }}">
    {% endif %}
{% endblock %}

{%- block form_label -%}
    {% if label is not same as(false) and 'checkbox' not in block_prefixes -%}
        {% if not compound -%}
            {% set label_attr = label_attr|merge({'for': id}) %}
        {%- endif -%}
        {% if required -%}
            {% set label_attr = label_attr|merge({'class': (label_attr.class|default('') ~ ' required')|trim}) %}
        {%- endif -%}
        {% if label is empty -%}
            {%- if label_format is not empty -%}
                {% set label = label_format|replace({
                    '%name%': name,
                    '%id%': id,
                }) %}
            {%- else -%}
                {% set label = name|humanize %}
            {%- endif -%}
        {%- endif -%}
        <{{ element|default('label') }}{% if label_attr %}{% with { attr: label_attr } %}{{ block('attributes') }}{% endwith %}{% endif %}>
            {%- if translation_domain is same as(false) -%}
                {{- label -}}
            {%- else -%}
                {{- label|trans({}, translation_domain) -}}
            {%- endif -%}
        </{{ element|default('label') }}>
    {%- endif -%}
{%- endblock form_label -%}


{% block checkbox_widget %}
    <div class="input-group mb-3">
        <div class="input-group-prepend">
            <div class="input-group-text">
                <input type="checkbox" {{ block('widget_attributes') }}{% if value is defined %} value="{{ value }}"{% endif %}{% if checked %} checked="checked"{% endif %} aria-label="{{ label|trans }}">
            </div>
        </div>
        <label class="form-control" for="{{ id }}">{{ label|trans }}</label>
    </div>
{% endblock checkbox_widget %}

